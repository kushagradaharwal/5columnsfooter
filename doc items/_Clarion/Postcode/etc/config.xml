<?xml version="1.0"?>
<config>
    <modules>
        <Clarion_Postcode>
            <version>0.1.0</version>
        </Clarion_Postcode>
    </modules>
    <frontend>
        <routers>
            <postcode>
                <use>standard</use>
                <args>
                    <module>Clarion_Postcode</module>
                    <frontName>postcode</frontName>
                </args>
            </postcode>
        </routers>
        <layout>
            <updates>
                <postcode>
                    <file>postcode.xml</file>
                </postcode>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<postcode>
				<use>admin</use>
				<args>
					<module>Clarion_Postcode</module>
					<frontName>postcode</frontName>
				</args>
			</postcode>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<postcode module="postcode">
				<title>Postcode</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="postcode">
						<title>Manage PostCodes</title>
						<sort_order>0</sort_order>
						<action>postcode/adminhtml_postcode</action>
					</items>
				</children>
			</postcode>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Clarion_Postcode>
							<title>Postcode Module</title>
							<sort_order>10</sort_order>
						</Clarion_Postcode>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<postcode>
					<file>postcode.xml</file>
				</postcode>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <postcode>
                <class>Clarion_Postcode_Model</class>
                <resourceModel>postcode_mysql4</resourceModel>
            </postcode>
            <postcode_mysql4>
                <class>Clarion_Postcode_Model_Mysql4</class>
                <entities>
                    <postcode>
                        <table>postcode</table>
                    </postcode>
                </entities>
            </postcode_mysql4>
        </models>
        <resources>
            <postcode_setup>
                <setup>
                    <module>Clarion_Postcode</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </postcode_setup>
            <postcode_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </postcode_write>
            <postcode_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </postcode_read>
        </resources>
        <blocks>
            <postcode>
                <class>Clarion_Postcode_Block</class>
            </postcode>
        </blocks>
        <helpers>
            <postcode>
                <class>Clarion_Postcode_Helper</class>
            </postcode>
        </helpers>
    </global>
</config>